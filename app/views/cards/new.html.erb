<%= render "shared/second-header"%>

<%= render 'shared/card_error_messages', card: @card %>

<%= form_with  url: user_cards_path, id: 'charge-form', class: 'card-form',local: true do |f| %>
<div class='form-wrap'>
  <div class='form-header'>
    <h1 class='form-header-text'>
      クレジットカード登録
    </h1>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">カード番号</label>
    </div>
    <%= f.text_field :number, class:"input-default", placeholder:"カード番号(半角英数字)", maxlength:"16" %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">CVC</label>
    </div>
    <%= f.text_field :cvc, class:"cvc", class:"input-default", placeholder:"カード背面にある3桁の番号", maxlength:"4" %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">有効期限</label>
    </div>
    <div class='input-expiration-date-wrap'>
      <%= f.select :exp_month, 1..12, {include_blank: "---"}, class: "input-expiration-date"%>
      <p>月</p>
      <%= f.select :exp_year, 20..25, {include_blank: "---"}, class: "input-expiration-date"%>
      <p>年</p>
    </div>
  </div>

  <div class='register-btn'>
    <%= f.submit "登録する" , class:"register-red-btn" %>
  </div>
</div>
<% end %>

<%= render "shared/second-footer"%>